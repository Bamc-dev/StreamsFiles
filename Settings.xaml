<UserControl x:Class="StreamsFiles.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StreamsFiles"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <Label Content="Url Websocket :" VerticalAlignment="Top" Margin="0"/>
            <TextBox x:Name="websocketUrl" VerticalAlignment="Top" Margin="10,25,10,0"/>
            <Button Content="Enregistrer" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,60,10,0" Click="SaveButton_Click"/>
            <Label Content="Url Api :" VerticalAlignment="Top" Margin="0,40,0,0"/>
            <TextBox x:Name="apiUrl" VerticalAlignment="Top" Margin="10,65,10,0"/>
            <Button Content="Enregistrer" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,90,10,0" Click="SaveButton_Click"/>
            <Button Content="Annuler" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,90,80,0" Click="CancelButton_Click"/>
        </Grid>
    </Grid>
</UserControl>
